// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Plan {
  id           String   @id @default(uuid())
  name         String // Free, Professional, Enterprise
  price        Float
  maxEmployees Int
  maxCompanies Int
  features     Json
  createdAt    DateTime @default(now())

  subscriptions Subscription[]
}

model Subscription {
  id          String             @id @default(uuid())
  userId      String
  planId      String
  status      SubscriptionStatus @default(PENDING_ACTIVATION)
  selectedAt  DateTime?
  activatedAt DateTime?
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime           @default(now())

  user   User                @relation(fields: [userId], references: [id])
  plan   Plan                @relation(fields: [planId], references: [id])
  addons SubscriptionAddon[]
}

enum SubscriptionStatus {
  DRAFT
  PENDING_ACTIVATION
  ACTIVE
  EXPIRED
  CANCELLED
}

model SubscriptionAddon {
  id             String   @id @default(uuid())
  subscriptionId String
  type           String // "EMPLOYEE_EXTRA"
  value          Int // e.g. +5, +10
  createdAt      DateTime @default(now())

  subscription Subscription @relation(fields: [subscriptionId], references: [id])
}

model Company {
  id            String   @id @default(uuid())
  name          String
  email         String
  address       String
  contactNumber String
  departments   Json // Store departments as JSON array
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  ownerId   String
  owner     User       @relation(fields: [ownerId], references: [id])
  employees Employee[]
  salaries  Salary[]
}

model User {
  id       String  @id @default(uuid())
  fullName String  @default("")
  email    String  @unique
  password String?
  role     Role    @default(ADMIN)

  isEmailVerified   Boolean   @default(false)
  emailVerifyToken  String?
  emailVerifyExpiry DateTime?
  isPasswordSet     Boolean   @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  subscriptions Subscription[]
  companies     Company[]
  notifications Notification[]
}

enum Role {
  ADMIN
  SUPER_ADMIN
}

model Employee {
  id            String  @id @default(uuid())
  fullName      String
  address       String
  nic           String  @unique
  employeeId    String // Internal ID given by company
  contactNumber String
  email         String?

  // Employment Details
  joinedDate  DateTime
  designation String
  department  String

  // Salary Details
  dailyRate Float @default(0)

  // EPF Settings
  epfEnabled Boolean @default(true)

  status String @default("ACTIVE") // ACTIVE, INACTIVE

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // Soft Delete field

  // Relations
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  salaries  Salary[]

  @@unique([companyId, employeeId]) // Employee ID must be unique within a company
}

model Salary {
  id    String @id @default(uuid())
  month Int // 1-12
  year  Int

  // Inputs
  workingDays Int

  // Calculated Values
  basicPay Float

  employeeEPF Float
  employerEPF Float
  etfAmount   Float

  // Tax (PAYE)
  employeeTaxAmount Float @default(0)

  // Snapshot of rates used (for legal compliance and historical accuracy)
  employeeEPFRate Decimal? @db.Decimal(5, 2)
  employerEPFRate Decimal? @db.Decimal(5, 2)
  etfRate         Decimal? @db.Decimal(5, 2)
  taxConfigId     String?

  netSalary Float

  createdAt DateTime @default(now())

  // Relations
  employeeId   String
  employee     Employee      @relation(fields: [employeeId], references: [id])
  companyId    String
  company      Company       @relation(fields: [companyId], references: [id])
  payrollRates PayrollRates? @relation(fields: [taxConfigId], references: [id])
}

model PayrollRates {
  id String @id @default(uuid())

  // Effective Date
  effectiveFrom DateTime

  // Tax Configuration (Monthly Basis)
  taxFreeMonthlyLimit Decimal @db.Decimal(10, 2) // e.g. 150000
  slab1Limit          Decimal @db.Decimal(10, 2) // e.g. 83333
  slab1Rate           Decimal @db.Decimal(5, 2) // e.g. 6
  slab2Limit          Decimal @db.Decimal(10, 2) // e.g. 41667
  slab2Rate           Decimal @db.Decimal(5, 2) // e.g. 18
  slab3Limit          Decimal @db.Decimal(10, 2) // e.g. 41667
  slab3Rate           Decimal @db.Decimal(5, 2) // e.g. 24
  slab4Limit          Decimal @db.Decimal(10, 2) // e.g. 41667
  slab4Rate           Decimal @db.Decimal(5, 2) // e.g. 30
  slab5Rate           Decimal @db.Decimal(5, 2) // e.g. 36 (for remaining balance)

  // EPF/ETF Configuration
  employeeEPFRate Decimal @db.Decimal(5, 2) // e.g. 8
  employerEPFRate Decimal @db.Decimal(5, 2) // e.g. 12
  etfRate         Decimal @db.Decimal(5, 2) // e.g. 3

  // Status
  isActive Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  salaries Salary[]
}

model Notification {
  id String @id @default(uuid())

  userId  String
  title   String
  message String           @db.Text
  type    NotificationType @default(INFO)

  isRead    Boolean @default(false)
  isDeleted Boolean @default(false)

  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@index([userId, isDeleted, isRead])
}

enum NotificationType {
  INFO
  WARNING
  ERROR
}
